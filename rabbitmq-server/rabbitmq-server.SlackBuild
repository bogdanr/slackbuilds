PRGNAM=rabbitmq-server
VERSION=${VERSION:-3.3.1}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i686 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

set -e

if [ "$(grep ^rabbitmq /etc/passwd)" = "" -o "$(grep ^rabbitmq /etc/group)" = "" ] ; then
  printf "\nYou must have a rabbitmq user and group.\n\nExample:\n"
  printf "\t# groupadd -g 264 rabbitmq\n"
  printf "\t# useradd -d /var/lib/rabbitmq -s /bin/sh -u 264 -g rabbitmq rabbitmq\n\n"
  exit 1
fi

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$PRGNAM-$VERSION.tar.gz
cd $PRGNAM-$VERSION
chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
 -exec chmod 644 {} \;

make
make install \
 TARGET_DIR=$PKG/usr/lib$LIBDIRSUFFIX/$PRGNAM \
 SBIN_DIR=$PKG/usr/bin \
 MAN_DIR=$PKG/usr/man \
 DOC_INSTALL_DIR=$PKG/usr/doc

mkdir -p $PKG/etc/rc.d
cat $CWD/rc.rabbitmq > $PKG/etc/rc.d/rc.rabbitmq.new
chmod +x $PKG/etc/rc.d/rc.rabbitmq.new

mkdir -p $PKG/etc/rabbitmq
cat  $CWD/rabbitmq-env.conf > $PKG/etc/rabbitmq/rabbitmq-env.conf.new

mkdir -p $PKG/lib/systemd/system
cat $CWD/rabbitmq.service > $PKG/lib/systemd/system/rabbitmq.service.new

rm -rf $PKG/usr/lib$LIBDIRSUFFIX/$PRGNAM/plugins

install -d -o rabbitmq -g rabbitmq $PKG/var/{lib,log}/rabbitmq

find $PKG -print0 | xargs -0 file | grep -e "executable" -e "shared object" | grep ELF \
  | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true

find $PKG/usr/man -type f -exec gzip -9 {} \;
for i in $( find $PKG/usr/man -type l ) ; do ln -s $( readlink $i ).gz $i.gz ; rm $i ; done

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
mv $PKG/usr/lib$LIBDIRSUFFIX/$PRGNAM/{INSTALL,LICENSE*} README \
  $PKG/usr/doc/$PRGNAM-$VERSION/
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD.${PKGTYPE:-txz}
